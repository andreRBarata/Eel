const command	= require('command');
const fs			= require('fs');

module.exports = command('writefile')
	.arguments('<path> [mode]')
	.action(function ({_: [path, mode], $stdin}, push) {
		#realpath(path) |> #then(([realpath]) => {
			$stdin.pipe(
				fs.createWriteStream(realpath, {flags: mode || 'w'})
			);

			push(null);
		});
	});
